<%= link_to "Home", controller: "home", action: "index" %>

<div class="books new">
  <h2>Create Book</h2>

  <%= form_for(@book) do |f| %>
    <% # url: tasks_path, method: 'post' %>

    <table summary="book form fields">
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Publish Date</th>
        <td><%= f.date_select :publish_date %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
            <th>Publisher</th>
            <td><%= f.text_field(:publisher) %></td>
        </tr>
        <tr>
            <th>Release Date</th>
            <td><%= f.date_select :release_date %></td>
        </tr>
        <tr>
            <th>Pages</th>
            <td><%= f.text_field(:pages) %></td>
        </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Book") %>
    </div>

  <% end %>
</div>
