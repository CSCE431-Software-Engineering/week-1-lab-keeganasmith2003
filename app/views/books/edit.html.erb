<%= link_to "Home", controller: "home", action: "index" %>

<div class="book edit">
  <h2>Edit Book</h2>

  <%= form_for(@book) do |f| %>
    <% # url: tasks_path, method: 'post' %>

    <table summary="book form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
        <tr>
            <th>Author</th>
            <td><%= f.text_field(:author) %></td>
        </tr>
        <tr>
            <th>Publish Date</th>
            <td><%= f.text_field(:publish_date) %></td>
        </tr>
        <tr>
            <th>Price</th>
            <td><%= f.text_field(:price) %></td>
        </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Update Book") %>
    </div>

  <% end %>
</div>
