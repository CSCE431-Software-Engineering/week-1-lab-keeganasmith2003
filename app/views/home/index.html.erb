<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<%= link_to "Add new", controller: "books", action: "new" %>
<table class="listing" summary="Task list" style="width: 100%;">
    <tr class="header">
      <th>Book Title</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td style="text-align: center;"><%= book.title %></td>
      
      <td class="actions">
        <%= link_to("Show", book_path(book), class: 'action show') %>
        <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
        <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>


